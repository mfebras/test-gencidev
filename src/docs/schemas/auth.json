{
  "AuthRegister": {
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "example": "user@mail.com"
      },
      "name": {
        "type": "string",
        "example": "Anna"
      },
      "password": {
        "type": "string",
        "example": "Qwerty11"
      },
      "password_confirmation": {
        "type": "string",
        "example": "Qwerty11"
      }
    }
  },
  "AuthLogin": {
    "type": "object",
    "properties": {
      "email": {
        "type": "string",
        "example": "user1@mail.com"
      },
      "password": {
        "type": "string",
        "example": "Qwerty11"
      },
      "remember_me": {
        "type": "boolean",
        "example": false
      }
    }
  },
  "AuthLoginResponse" : {
    "type": "object",
    "properties": {
      "status": {
        "type": "boolean",
        "example": true
      },
      "message": {
        "type": "string",
        "example": "Success"
      },
      "data": {
        "type": "object",
        "example": {
          "access_token": "eyJhbGci...",
          "refresh_token": "eyJhbGci...",
          "access_token_exp": "2025-08-24 09:52:03",
          "refresh_token_exp": "2025-09-23 08:52:03",
          "user": {
            "id": "1",
            "name": "Somchit David",
            "email": "user1@mail.com",
            "remember_me": false
          }
        }
      }
    }
  },
  "AuthRefreshToken": {
    "type": "object",
    "properties": {
      "refresh_token": {
        "type": "string",
        "example": ""
      }
    }
  }
}