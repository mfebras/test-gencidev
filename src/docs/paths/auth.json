{
  "/auth/register": {
    "post": {
      "tags": ["Auth"],
      "parameters": [
        {
          "name": "lang",
          "in": "query",
          "required": false,
          "description": "Multi lang value: id, en. Example ?lang=id"
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/AuthRegister"
            }
          }
        },
        "required": true
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BaseResponse"
              }
            }
          }
        }
      }
    }
  },
  "/auth/login": {
    "post": {
      "tags": ["Auth"],
      "parameters": [
        {
          "name": "lang",
          "in": "query",
          "required": false,
          "description": "Multi lang value: id, en. Example ?lang=id"
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/AuthLogin"
            }
          }
        },
        "required": true
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthLoginResponse"
              }
            }
          }
        }
      }
    }
  },
  "/auth/refresh-token": {
    "post": {
      "tags": ["Auth"],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/AuthRefreshToken"
            }
          }
        },
        "required": true
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthLoginResponse"
              }
            }
          }
        }
      }
    }
  }
}
